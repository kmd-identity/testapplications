<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMD.Identity.TestApplications.OpenID.MAUI.ApiPage"
             NavigatedTo="ApiPage_OnNavigatedTo"
             >

    <ScrollView>
        <VerticalStackLayout>
            <Button
            x:Name="ApiCallBtn"
            Text="Call API"
            Clicked="ApiCallBtn_OnClicked"
            HorizontalOptions="Center" 
            Margin="5"/>
            <Label
            HorizontalOptions="Center"
            Text="{Binding ApiResult}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>